@model IEnumerable<OrderItApp.Models.Order>

@{
    ViewData["Title"] = "Orders";
}

<h1>Orders</h1>

@* show a friendly prompt when the user has not placed any orders yet *@
@if (!Model.Any())
{
    <p class="lead">Start your order here</p>
}

<p>
    <a class="btn btn-primary" asp-controller="Orders" asp-action="Create">Create New Order</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Customer</th>
            <th>Item</th>
            <th>Quantity</th>
            <th>Created At</th>
        </tr>
    </thead>
    <tbody>
    @foreach (var order in Model)
    {
        <tr>
            <td>@order.Id</td>
            <td>@order.CustomerName</td>
            <td>@order.Item</td>
            <td>@order.Quantity</td>
            <td>@order.CreatedAt.ToString("g")</td>
        </tr>
    }
    </tbody>
</table>